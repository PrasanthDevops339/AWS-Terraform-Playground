{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyEC2LaunchWithUnapprovedAMI",
      "Effect": "Deny",
      "Action": [
        "ec2:RunInstances",
        "ec2:CreateFleet",
        "ec2:RequestSpotInstances",
        "ec2:RequestSpotFleet",
        "autoscaling:CreateLaunchConfiguration",
        "autoscaling:CreateAutoScalingGroup",
        "autoscaling:UpdateAutoScalingGroup"
      ],
      "Resource": "*",
      "Condition": {
        "StringNotEquals": {
          "ec2:Owner": [
            "123456738923",
            "111122223333",
            "444455556666",
            "777788889999",
            "222233334444"
          ]
        }
      }
    },
    {
      "Sid": "DenyAMICreation",
      "Effect": "Deny",
      "Action": [
        "ec2:CreateImage",
        "ec2:CopyImage",
        "ec2:RegisterImage",
        "ec2:ImportImage",
        "ec2:ImportSnapshot"
      ],
      "Resource": "*"
    },
    {
      "Sid": "DenyAMISharing",
      "Effect": "Deny",
      "Action": [
        "ec2:ModifyImageAttribute",
        "ec2:ModifySnapshotAttribute"
      ],
      "Resource": "*",
      "Condition": {
        "StringLike": {
          "ec2:Attribute": [
            "launchPermission",
            "createVolumePermission"
          ]
        }
      }
    }
  ]
}
